<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:banner="http://schemas.android.com/apk/res-auto">

    <info.hoang8f.android.segmented.SegmentedGroup
        xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/typeSeg"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        segmentedgroup:sc_checked_text_color="#FFFFFF"
        segmentedgroup:sc_tint_color="@color/colorPrimaryDark"
        segmentedgroup:sc_border_width="2dp"
        segmentedgroup:sc_corner_radius="0dp">
        />
    </info.hoang8f.android.segmented.SegmentedGroup>

    <com.aspsine.irecyclerview.IRecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/iRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:loadMoreEnabled="true"
        app:refreshEnabled="true"
        tools:context="com.xyxd.fisher.Fragment.HomeFragment" />

    /*
    app:refreshHeaderLayout="@layout/layout_irecyclerview_refresh_header"
    app:loadMoreFooterLayout="@layout/layout_irecyclerview_load_more_footer"
    */



</android.support.v7.widget.LinearLayoutCompat>